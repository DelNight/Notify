<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D5E8F6">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D5E8F6">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bookmark"
            android:textColor="@android:color/white"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            />

    </androidx.appcompat.widget.Toolbar>
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="125dp"
        android:elevation="20dp"
        app:cardCornerRadius="15dp"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/judul"
                android:layout_width="160dp"
                android:layout_height="20dp"
                android:text="Lorem Ipsum"
                android:textSize="16dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tanggal"
                android:layout_toRightOf="@id/judul"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:text="24 Desember 2020"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:layout_toRightOf="@id/tanggal"/>

            <TextView
                android:id="@+id/isitext"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="text aja text text aja text text aja text text aja text text aja text text aja text text aja text text aja text text aja text text aja text text aja text"
                android:layout_below="@id/judul"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:id="@+id/profile"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_person_24"
                android:layout_below="@id/isitext"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/nama"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:text="Adji nurdiman"
                android:layout_toRightOf="@id/profile"
                android:gravity="center_vertical"
                android:layout_below="@id/isitext"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="lihat thread"
                android:layout_toRightOf="@id/nama"
                android:layout_below="@id/isitext"
                android:layout_alignParentRight="true"
                android:gravity="end|center_vertical" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>