<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:padding="16dp"
    app:cardCornerRadius="16dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <TextView
            android:id="@+id/learn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consetuer sadisping"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/learn_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consetelur sadipcing elitr, sed diam nonumy"
            android:textSize="18sp"
            android:layout_below="@id/learn_title"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/learn_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_person_24"
                android:layout_below="@+id/learn_title"/>
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diazs Martiansyah"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/learn_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_watch_later_24"
                android:layout_below="@+id/learn_title"/>
            <TextView
                android:id="@+id/ket_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 menit"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
