<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/ic_vector_login">


        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="25dp"
            android:text="Welcome To Notify!"
            android:textColor="@color/color3"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="193dp"
            android:layout_height="162dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_undraw_online_learning_re_qw08" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/shape_corner_white"
        android:elevation="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="@color/color2"
            android:textSize="36dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/header"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_radius_login"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/email"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_radius_login"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_toRightOf="@id/btn_signup"
            android:layout_toEndOf="@+id/btn_signup"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center_horizontal|center"
            android:background="@drawable/radius_button"
            android:text="Masuk"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_marginLeft="2dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal|center"
            android:background="@drawable/shape_corner_tosca"
            android:backgroundTint="@android:color/transparent"
            android:text="Buat akun"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_downloginregis"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:tint="@color/color1" />

</RelativeLayout>