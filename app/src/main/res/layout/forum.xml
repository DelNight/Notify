<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#D8E5F6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5E8F6">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                >

                <ImageView
                    android:id="@+id/button_sidebarforum"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_menu_24"
                    android:layout_alignParentLeft="true"
                    app:tint="@color/color3"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_baseline_more_horiz_24"
                    app:tint="@color/color3" />

             <RelativeLayout
                 android:layout_width="200dp"
                 android:layout_height="match_parent"
                 android:background="@drawable/shape_corner_white"
                 android:layout_marginLeft="85dp"
                 android:paddingRight="10dp"
                 android:paddingLeft="10dp">
                 <EditText
                     android:id="@+id/cari"
                     android:layout_width="150dp"
                     android:textSize="15dp"
                     android:layout_height="match_parent"
                     android:hint="Cari Topik...."
                     android:textColor="#000000"/>

                 <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:layout_alignParentRight="true"
                     android:src="@drawable/ic_search_black_24dp"/>

             </RelativeLayout>


            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="20dp"
            app:cardCornerRadius="15dp"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Judulnya"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:id="@+id/judul"/>

                <TextView
                    android:id="@+id/isi"
                    android:layout_below="@id/judul"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum "/>

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_person_24"
                    android:layout_below="@id/isi"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/nama"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:text="Adji nurdiman"
                    android:layout_toRightOf="@id/profile"
                    android:gravity="center_vertical"
                    android:layout_below="@id/isi"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Selengkapnya"
                    android:layout_toRightOf="@id/nama"
                    android:layout_below="@id/isi"
                    android:layout_alignParentRight="true"
                    android:gravity="end|center_vertical"
                    android:layout_marginRight="5dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_add_24"
            android:contentDescription=""
            android:layout_alignParentBottom="true"
            android:background="#7090B0"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="20dp"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_corner_white"
            app:menu="@menu/navigation_forum"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header_home"
        app:menu="@menu/forum_sidebar"
        android:layout_gravity="start"
        android:id="@+id/forum_sidebar"/>

</androidx.drawerlayout.widget.DrawerLayout>