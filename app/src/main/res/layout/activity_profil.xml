<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ProfilActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color2"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="@color/color2"/>

        <ImageButton
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_exit_to_app_24"
            android:background="@color/color2"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/img_profil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/namae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_profil"
            android:layout_marginTop="25dp"
            android:text="Hafidz Fadillah"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color5"
            android:textStyle="bold"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_centerInParent="true"
            android:background="@drawable/line_post"/>

        <TextView
            android:id="@+id/profil"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/color10"
            android:background="@color/white"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/color4"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textStyle="bold"
                android:textColor="@color/color10"/>

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_edit_24"
                android:background="@color/color5"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="Muhammad Hafidz Fadillah"
                android:textStyle="bold"
                android:textColor="@color/color2"
                android:layout_below="@id/title_name"/>

            <TextView
                android:id="@+id/title_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Kelas"
                android:textStyle="bold"
                android:textColor="@color/color10"
                android:layout_below="@id/name"/>

            <TextView
                android:id="@+id/class_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="XII RPL 2"
                android:textStyle="bold"
                android:textColor="@color/color2"
                android:layout_below="@id/title_class"/>

            <TextView
                android:id="@+id/title_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Jenis Kelamin"
                android:textStyle="bold"
                android:textColor="@color/color10"
                android:layout_below="@+id/class_user"/>

            <TextView
                android:id="@+id/gender_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="Laki-laki"
                android:textStyle="bold"
                android:textColor="@color/color2"
                android:layout_below="@id/title_gender"/>

            <TextView
                android:id="@+id/title_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:text="Username"
                android:textColor="@color/color10"
                android:layout_below="@id/gender_user"/>

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="Hafidz Fadillah"
                android:textStyle="bold"
                android:textColor="@color/color2"
                android:layout_below="@id/title_username"/>

            <TextView
                android:id="@+id/title_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:text="Email"
                android:textColor="@color/color10"
                android:layout_below="@+id/username"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="Email@gmail.com"
                android:textStyle="bold"
                android:textColor="@color/color2"
                android:layout_below="@+id/title_email"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_post"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/postingan_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Postingan Saya"
            android:textSize="15dp"
            android:textColor="@color/color10"
            android:background="@color/white"
            android:textStyle="bold"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>