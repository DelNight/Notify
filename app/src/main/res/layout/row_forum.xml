<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/card_forum"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="30dp"
    android:elevation="20dp"
    app:cardCornerRadius="15dp"
    android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judulnya"
                android:textSize="16dp"
                android:textStyle="bold"
                android:id="@+id/judul"/>
            <ImageView
                android:id="@+id/gbrforum"
                android:layout_below="@+id/judul"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/ic_baseline_image_24" />


            <TextView
                android:id="@+id/isi"
                android:layout_below="@id/gbrforum"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum "/>

            <ImageView
                android:id="@+id/profile"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_person_24"
                android:layout_below="@id/isi"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/nama"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:text="Adji nurdiman"
                android:layout_toRightOf="@id/profile"
                android:gravity="center_vertical"
                android:layout_below="@id/isi"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Selengkapnya"
                android:layout_toRightOf="@id/nama"
                android:layout_below="@id/isi"
                android:layout_alignParentRight="true"
                android:gravity="end|center_vertical"
                android:layout_marginRight="5dp"/>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>