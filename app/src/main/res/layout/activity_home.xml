<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".SideMenuHome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_home"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
            android:background="#7090B0">

        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:radius="50dp"
            android:id="@+id/kotak1"
            android:elevation="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="70dp"
            android:layout_height="120dp"
            android:background="@drawable/shape_corner_tosca"
            android:layout_width="match_parent">

            <TextView
                android:paddingLeft="15dp"
                android:paddingTop="25dp"
                android:id="@+id/name"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Nama User"
                android:textSize="20sp"/>

            <TextView
                android:paddingLeft="15dp"
                android:id="@+id/as"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:text="Role User"
                android:textSize="15sp"
                android:layout_below="@+id/name"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/profile" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/garis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kotak1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <TextView
                android:id="@+id/lbl_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buat Kamu"
                android:layout_marginTop="10dp"
                android:textSize="15dp"/>

            <View
                android:layout_toRightOf="@id/lbl_container"
                android:layout_width="250dp"
                android:layout_height="3dp"
                android:layout_marginTop="20dp"
                android:background="#000000"
                android:layout_marginLeft="20dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/container_kotak"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/garis"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@id/garis"
                android:orientation="horizontal"
                android:id="@+id/recycler_buat_kamu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:listitem="@layout/row_buat_kamu"/>
        </LinearLayout>

        <View
            android:id="@+id/garis2"
            android:layout_width="match_parent"
            android:layout_marginRight="25dp"
            android:layout_height="3dp"
            android:layout_below="@id/container_kotak"
            android:background="#000000"
            android:layout_marginLeft="25dp" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/garis2">

            <RelativeLayout
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"

                android:layout_below="@id/garis2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/beranda"
                    android:layout_margin="10dp"
                    android:layout_height="80dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="100dp"
                    android:padding="10dp"
                    android:layout_alignParentLeft="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/icon_forum"
                            android:layout_height="60dp"
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_baseline_home_24"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Beranda"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/voting"
                    android:layout_margin="10dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_height="80dp"
                    android:layout_width="100dp"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/icon_voting"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_baseline_how_to_vote_24"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Voting"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/icon_voting"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/learning"
                    android:layout_margin="10dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:id="@+id/icon_learning"
                            android:src="@drawable/ic_baseline_forum_24"/>

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="E-Learning"
                            android:layout_below="@id/icon_learning"
                            android:gravity="center_horizontal"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/kalender"
                    android:layout_margin="10dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/beranda">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_height="60dp"
                            android:layout_width="match_parent"
                            android:id="@+id/icon_kalender"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/ic_baseline_calendar_today_24" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Kalender"
                            android:gravity="center_horizontal"
                            android:layout_below="@id/kalender"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/chat"
                    android:layout_margin="10dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/voting"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/icon_chat"
                            android:layout_height="60dp"
                            android:layout_width="match_parent"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_baseline_chat_bubble_24"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Obrolan"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/posting"
                    android:layout_margin="10dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/voting"
                    android:layout_alignParentRight="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_height="60dp"
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_baseline_add_24"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Posting"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_bell"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/bell"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_repeatMode="reverse"
        android:background="@color/white"/>

</androidx.drawerlayout.widget.DrawerLayout>
