<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8E5F6"
    tools:context=".SideMenuHome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5E8F6">

        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:radius="50dp"
            android:id="@+id/kotak1"
            android:elevation="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="70dp"
            android:layout_height="120dp"
            android:background="@drawable/shape_corner_tosca"
            android:layout_width="match_parent">
            <TextView
                android:paddingLeft="10dp"
                android:paddingTop="25dp"
                android:id="@+id/name"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:text="Adji Nurdiman"
                android:textSize="20sp"/>

            <TextView
                android:paddingLeft="10dp"
                android:id="@+id/as"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:text="siswa aja"
                android:textSize="15sp"
                android:layout_below="@+id/name"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/profile" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/garis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kotak1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <TextView
                android:id="@+id/lbl_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buat Kamu"
                android:layout_marginTop="10dp"
                android:textSize="15dp"/>

            <View
                android:layout_toRightOf="@id/lbl_container"
                android:layout_width="250dp"
                android:layout_height="3dp"
                android:layout_marginTop="20dp"
                android:background="#000000"
                android:layout_marginLeft="20dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/container_kotak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/garis"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <View
                android:id="@+id/kotak2"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="#B5B5B5"/>

            <View
                android:id="@+id/kotak3"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="#B5B5B5" />
        </LinearLayout>

        <View
            android:id="@+id/garis2"
            android:layout_width="match_parent"
            android:layout_marginRight="25dp"
            android:layout_height="3dp"
            android:layout_below="@id/container_kotak"
            android:layout_marginTop="25dp"
            android:background="#000000"
            android:layout_marginLeft="25dp" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/garis2">
        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"

            android:layout_below="@id/garis2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner_white">

            <ImageView
                android:id="@+id/forum"
                android:layout_marginTop="10dp"
                android:layout_height="60dp"
                android:layout_width="120dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_baseline_forum_24"/>

            <TextView
                android:layout_height="50dp"
                android:layout_width="120dp"
                android:text="Forum"
                android:layout_below="@id/forum"
                android:gravity="center_horizontal"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/voting"
                android:layout_height="60dp"
                android:layout_width="115dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_baseline_how_to_vote_24"/>

            <TextView
                android:layout_height="50dp"
                android:layout_width="115dp"
                android:text="Voting"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/forum"
                android:gravity="center_horizontal"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/learning"
                android:layout_height="60dp"
                android:layout_width="120dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_forum_24"/>

            <TextView
                android:id="@+id/text"
                android:layout_height="40dp"
                android:layout_width="120dp"
                android:text="E-Learning"
                android:layout_alignParentRight="true"
                android:layout_below="@id/forum"
                android:gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/kalender"
                android:layout_height="60dp"
                android:layout_width="120dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_baseline_calendar_today_24"
                android:layout_below="@id/text"/>

            <TextView
                android:layout_height="40dp"
                android:layout_width="120dp"
                android:text="Kalender"
                android:gravity="center_horizontal"
                android:layout_below="@id/kalender"/>

            <ImageView
                android:id="@+id/chat"
                android:layout_height="60dp"
                android:layout_width="115dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_baseline_chat_bubble_24"
                android:layout_below="@id/text"/>

            <TextView
                android:layout_height="40dp"
                android:layout_width="120dp"
                android:text="Obrolan"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:layout_below="@id/kalender"/>

            <ImageView
                android:id="@+id/posting"
                android:layout_height="60dp"
                android:layout_width="120dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_add_24"
                android:layout_below="@id/text"/>

            <TextView
                android:layout_height="40dp"
                android:layout_width="120dp"
                android:text="Posting"
                android:gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:layout_below="@id/kalender"/>
        </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header_home"
        app:menu="@menu/home_sidebar"
        android:layout_gravity="start"
        android:id="@+id/home_sidebar"
        />


</androidx.drawerlayout.widget.DrawerLayout>
